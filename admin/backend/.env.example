# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Application
APP_NAME=JACS ShiftPilot

# PostgreSQL Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://your_db_user:your_db_password@localhost:5432/your_database_name?schema=public"
# Shadow database for Prisma migrations (uses same database with different schema)
SHADOW_DATABASE_URL="postgresql://your_db_user:your_db_password@localhost:5432/your_database_name?schema=shadow"

# Email Configuration
# Options: 'gmail', 'outlook', 'custom', 'ethereal' (for testing)
EMAIL_PROVIDER=ethereal

# For Gmail: Use your Gmail address and App Password
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# For Custom SMTP (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false

# OAuth Configuration
# Backend URL (for OAuth callbacks)
BACKEND_URL=http://localhost:3001

# Google OAuth
# Get credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# Get credentials: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Microsoft OAuth
# Get credentials: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
