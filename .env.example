# JACS ShiftPilot Environment Variables
# Copy this file to .env and update values as needed

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=shiftpilot

# Database URLs for Prisma
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/shiftpilot
SHADOW_DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/shiftpilot_shadow

# ==========================================
# BACKEND CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
VITE_API_URL=http://localhost:3001/api

# ==========================================
# DOCKER CONFIGURATION
# ==========================================
# Exposed ports
BACKEND_PORT=3001
FRONTEND_PORT=5173
POSTGRES_PORT=5432
